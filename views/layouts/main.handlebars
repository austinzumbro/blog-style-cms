<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            type="text/css"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
        />
        <link rel="stylesheet" type="text/css" href="/css/style.css" />
        <title>Tech Blog</title>
    </head>
    <body>
        <header
            class="container-fluid bg-dark pt-2 px-5 pb-4 d-flex flex-column align-items-start"
        >
            <nav class="navbar navbar-expand text-white">
                <ul class="navbar-nav">
                    <a href="/">
                        <li class="nav-item m-3">Home</li>
                    </a>
                    <a href="/dashboard">
                        <li class="nav-item m-3">Dashboard</li>
                    </a>
                    {{#unless loggedIn}}
                        <a href="/login">
                            <li class="nav-item m-3">Login</li>
                        </a>
                        <a href="/signup">
                            <li class="nav-item m-3">Sign Up</li>
                        </a>
                    {{else}}
                        <a href="" id="logout-link">
                            <li class="nav-item m-3">Logout</li>
                        </a>
                    {{/unless}}

                </ul>
            </nav>
            <h1 class="text-dark bg-light p-3 px-5 m-3">Tech Blog</h1>
        </header>

        {{{body}}}

        {{#if loggedIn}}
            <script src="/js/logout.js"></script>
        {{/if}}
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        ></script>
    </body>
</html>