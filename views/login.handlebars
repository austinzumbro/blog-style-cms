<section class="container w-50 mx-auto my-5">
    <form
        id="login-form"
        class="container custom-form custom-light-grey px-5 pb-5 pt-4 m-3"
    >
        <h2 class="fs-1 mb-3">Login</h2>
        <div class="mb-3">
            <label for="loginUsername" class="mb-1">Username</label>
            <input type="text" class="form-control" id="loginUsername" />
        </div>
        <div class="mb-4">
            <label for="loginPassword" class="mb-1">Password</label>
            <input type="password" id="loginPassword" class="form-control" />
        </div>
        <div class="d-flex flex-row justify-content-between pt-2">
            <button type="submit" class="btn btn-lg btn-dark">Submit</button>
            <a href="/signup" class="btn btn-lg btn-light">Actually, I need to
                Sign Up</a>
        </div>
    </form>
</section>
<script src="/js/login.js"></script>